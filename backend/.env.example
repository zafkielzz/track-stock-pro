# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/track_stock_pro
# For SQLite development: sqlite:///./track_stock.db

# Application Settings
APP_NAME="Track Stock Pro"
DEBUG=True
API_PORT=3000
AI_PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Service
FACE_RECOGNITION_TOLERANCE=0.6  # Lower = stricter matching
FACE_ENCODING_MODEL=large  # small, large
MAX_FACE_DISTANCE=0.6

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Optional: AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=

# Optional: Redis
# REDIS_URL=redis://localhost:6379/0
